<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="https://jakarta.ee/xml/ns/persistence/orm"
                 version="3.0">

    <entity class="com.github.pomaretta.cide.entity.Person">
        <table name="person" schema="cide" catalog=""/>
        <attributes>
            <id name="id">
                <column name="id"/>
            </id>
            <basic name="nif">
                <column name="nif"/>
            </basic>
            <basic name="name">
                <column name="name"/>
            </basic>
            <basic name="firstLastname">
                <column name="first_lastname"/>
            </basic>
            <basic name="secondLastname">
                <column name="second_lastname"/>
            </basic>
            <basic name="birthdate">
                <column name="birthdate"/>
            </basic>
            <basic name="gender">
                <column name="gender"/>
            </basic>
            <basic name="telephone">
                <column name="telephone"/>
            </basic>
        </attributes>
    </entity>
</entity-mappings>
